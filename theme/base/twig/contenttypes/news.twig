{% extends 'frames/marketing.twig' %}

{% block body %}

	<div class="layout-postlist record-news row headerpad">
		<div class="row-content buffer">

			{% for newsitem in news %}

				<div class="layout-postlist-item">

					<!-- Post extract -->
					<a href="{{ newsitem.link }}" class="plain block">

						<p class="logo"><img src="{{ image(newsitem.introimage) }}" alt="{{ newsitem.title }}" title="{{ newsitem.title }}"></p>

						<!-- Post details -->
						<ul class="plain collapse tight-rhythm">
							<li class="date">{{ newsitem.datepublish|localdate }}</li>
						</ul>
						<div class="clear"></div>

						<h1 class="reset">{{ newsitem.title }}</h1>
						<p>{{ newsitem.excerpt(300) }}</p>

						<span class="button stroke align-center block round">Read more</span>

						<div class="clear"></div>
					</a>

				</div>

			{% endfor %}

			{{ pager() }}

		</div>
	</div>

{% endblock %}
