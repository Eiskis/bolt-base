{% extends 'frames/support.twig' %}

{% block body %}

	<div class="layout-supportarticle record-guide">

		<div class="row headerpad">
			<div class="row-content buffer">

				<div class="column smallmedium-nine right">

					<div class="layout-customcontent">
						<div class="layout-customcontent-section">

							<h1>{{ guide.title }}</h1>

							{% if guide.body %}
								{{ guide.body }}
							{% endif %}

							<div class="layout-customcontent-overflow buffer-top">

								<p class="discreet">This article was last updated on {{ guide.dateupdate|localdate }}.</p>

								{# {% include 'partials/recordnavigation.twig' with {
									'record': guide
								} only %} #}

							</div>

						</div>
					</div>

				</div>

				<div class="column smallmedium-three smallmedium-last buffer-top right hide-under-smallmedium">
					{{ menu('support', 'menus/supportfull.twig') }}
				</div>

				<div class="clear"></div>
			</div>
		</div>

	</div>

{% endblock %}


