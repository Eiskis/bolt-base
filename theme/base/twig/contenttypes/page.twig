{% extends 'twig/layouts/full.twig' %}

{% block body %}

	<div class="contenttype-page">

		<div class="row">
			<div class="row-content buffer">

				{% if page.heading %}
					<h1>{{ page.heading }}</h1>
				{% endif %}

				{% if page.headercontent %}
					{{ page.headercontent }}
				{% endif %}

			</div>
		</div>

		{# Main content #}
		<div class="row">
			<div class="row-content buffer">

				<div class="layout-customcontent-section">
					<div class="layout-customcontent">

						{% if page.intro %}
							{{ page.intro }}
						{% endif %}

						{% if page.body1 %}
							{{ page.body1 }}
						{% endif %}

						{% if page.contentimage1 %}
							<p><img src="{{ image(page.contentimage1) }}"></p>
						{% endif %}

						{% if page.body2 %}
							{{ page.body2 }}
						{% endif %}

						{% if page.contentimage2 %}
							<p><img src="{{ image(page.contentimage2) }}"></p>
						{% endif %}

						{% if page.body3 %}
							{{ page.body3 }}
						{% endif %}

						{% if page.contentimage3 %}
							<p><img src="{{ image(page.contentimage3) }}"></p>
						{% endif %}

						{% if page.body4 %}
							{{ page.body4 }}
						{% endif %}

						{% if page.contentimage4 %}
							<p><img src="{{ image(page.contentimage4) }}"></p>
						{% endif %}

						{% if page.body5 %}
							{{ page.body5 }}
						{% endif %}

					</div>
				</div>

			</div>
		</div>

	</div>

{% endblock %}
